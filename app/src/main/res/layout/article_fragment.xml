<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="currentArticle"
            type="com.example.newsreader.Repository.CurrentArticle"/>
        <variable name="articleViewModel"
            type="com.example.newsreader.ui.article.ArticleViewModel"/>
    </data>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.article.Article"
    android:orientation="vertical"
    android:id="@+id/article_fragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:onClick="onGalleryClick"
        android:id="@+id/article_gallery"
        storageReference="@{articleViewModel.firstStorageReference}"/>
    <TextView
        android:id="@+id/article_photo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/article_margin"
        android:layout_marginEnd="@dimen/article_margin"
        android:theme="@style/article_photo_description"
        android:text="@{currentArticle.imagesDescription.get(0)}" />
    <TextView
        android:id="@+id/article_photo_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/article_margin"
        android:layout_marginEnd="@dimen/article_margin"
        android:theme="@style/article_photo_author"
        android:text="@{currentArticle.imagesAuthors.get(0)}" />
    <TextView
        android:id="@+id/article_title"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="@dimen/article_margin"
        android:layout_marginEnd="@dimen/article_margin"

        android:layout_height="wrap_content"
        android:theme="@style/article_title"
        android:text="@{currentArticle.title}" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/article_author_layout"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/article_margin"
            android:id="@+id/article_author_image"
            storageReference="@{currentArticle.authorImage}"
            />
        <TextView
            android:id="@+id/article_author"
            android:layout_width="match_parent"
            android:theme="@style/article_author"
            android:layout_marginStart="@dimen/article_margin"
            android:layout_marginEnd="@dimen/article_margin"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/article_author_image"
            android:text="@{currentArticle.author}" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/article_publishment_date"
            android:layout_width="wrap_content"
            android:theme="@style/article_photo_description"
            android:layout_marginStart="@dimen/article_margin"
            android:layout_marginEnd="@dimen/article_margin"
            android:layout_height="wrap_content"
            android:text="@{currentArticle.publishingDate.toDate().toString()}" />
        <TextView
            android:id="@+id/article_update_date"
            android:layout_width="match_parent"
            android:theme="@style/article_photo_description"
            android:layout_marginStart="@dimen/article_margin"
            android:layout_marginEnd="@dimen/article_margin"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/article_publishment_date"
            android:text="@{currentArticle.updateDate.toDate().toString()}" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/article_subheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/article_margin"
            android:layout_marginEnd="@dimen/article_margin"
            android:text="@{currentArticle.subheading}"
            android:theme="@style/article_subheading" />
        <TextView
            android:id="@+id/article_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_subheading"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/article_margin"
            android:layout_marginEnd="@dimen/article_margin"
            android:text="@{currentArticle.text}"
            android:theme="@style/article_text" />

    </RelativeLayout>

</LinearLayout>

</ScrollView>
</layout>